# placement & behavior
anchor=top-center
layer=overlay
max-visible=5
sort=descending
default-timeout=5000        # 5s for normal notifications
ignore-timeout=0

# look
font=JetBrainsMono Nerd Font 12
background-color=#24273acc  # Catppuccin Macchiato base with alpha
text-color=#cad3f5
border-color=#8aadf4
border-size=2
border-radius=8
padding=12
margin=10,10,0
width=380
icons=1
progress-color=#8aadf4

# mouse actions
on-button-left=exec:makoctl dismiss
on-button-middle=exec:makoctl dismiss --all
on-button-right=exec:makoctl invoke-default-action

# ensure “critical” also expires
[urgency=critical]
default-timeout=5000
